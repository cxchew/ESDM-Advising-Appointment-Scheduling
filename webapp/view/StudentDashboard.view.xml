<mvc:View controllerName="project1.controller.StudentDashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Page id="studentDashboardPage" title="{i18n>studentDashboardTitle}">
        <content>
            <l:VerticalLayout width="100%" class="sapUiContentPadding">
                <!-- Student Selection -->
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="{i18n>selectStudent}">
                    <f:content>
                        <Label text="{i18n>student}"/>
                        <Select selectedKey="{appointments>/currentStudentId}" items="{appointments>/students}" change="onCurrentStudentChange">
                            <items>
                                <core:Item key="{appointments>id}" text="{appointments>name}"/>
                            </items>
                        </Select>
                    </f:content>
                </f:SimpleForm>

                <!-- Booking Form -->
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="{i18n>bookAppointment}">
                    <f:content>
                        <Label text="{i18n>yourAdvisor}"/>
                        <Text text="{appointments>/currentAdvisorName}"/>

                        <Label text="{i18n>selectDate}"/>
                        <DatePicker value="{appointments>/studentBooking/date}" valueFormat="yyyy-MM-dd" displayFormat="long" change="onStudentDateChange"/>

                        <Label text="{i18n>availableSlots}"/>
                        <Select selectedKey="{appointments>/studentBooking/time}" items="{appointments>/availableSlots}">
                            <items>
                                <core:Item key="{appointments>}" text="{appointments>}"/>
                            </items>
                        </Select>

                        <Label text="{i18n>duration}"/>
                        <Input value="{appointments>/studentBooking/duration}" type="Number" description="{i18n>minutes}"/>

                        <Label text="{i18n>notes}"/>
                        <TextArea value="{appointments>/studentBooking/notes}" rows="3"/>

                        <Toolbar design="Transparent">
                            <ToolbarSpacer/>
                            <Button text="{i18n>bookNow}" type="Emphasized" press="onStudentBookAppointment"/>
                        </Toolbar>
                    </f:content>
                </f:SimpleForm>

                <!-- My Appointments -->
                <Table id="tblMyAppointments" width="100%" items="{appointments>/myAppointments}" alternateRowColors="true" class="sapUiSmallMarginTop">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>myAppointments}" level="H3"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>advisor}"/></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>date}"/></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>time}"/></Column>
                        <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>duration}"/></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Block"><Text text="{i18n>notes}"/></Column>
                        <Column width="8rem" minScreenWidth="Desktop"><Text text="{i18n>actions}"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{appointments>advisorName}" wrapping="true"/>
                                <Text text="{appointments>date}" wrapping="true"/>
                                <Text text="{appointments>time}" wrapping="true"/>
                                <Text text="{appointments>duration}" wrapping="true"/>
                                <Text text="{appointments>notes}" wrapping="true"/>
                                <HBox justifyContent="End" wrap="Wrap">
                                    <Button text="{i18n>cancelAppointment}" type="Transparent" press="onStudentCancelAppointment"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>
