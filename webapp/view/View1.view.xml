<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiSmallMargin" width="100%">
                <Text text="{i18n>welcomeText}"/>
                <Toolbar design="Transparent">
                    <ToolbarSpacer/>
                    <Button text="{i18n>openAppointments}" type="Emphasized" press="onNavToAppointments"/>
                    <Button text="{i18n>openStudentDashboard}" type="Emphasized" press="onNavToStudentDashboard"/>
                </Toolbar>
            </VBox>
        </content>
    </Page>
</mvc:View>